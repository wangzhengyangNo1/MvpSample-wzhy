<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wzhy.mvpsample_wzhy.MainActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_id"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/id"
        android:layout_margin="5dp"
        android:textSize="28sp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_id"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/tv_id"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:inputType="text"
        android:textSize="18sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_first_name"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_id"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="@string/first_name"
        android:textSize="28sp"
        />
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_first_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_below="@id/edt_id"
        android:layout_toRightOf="@id/tv_first_name"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_last_name"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_first_name"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="@string/last_name"
        android:textSize="28sp"
        />
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_last_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_below="@id/edt_first_name"
        android:layout_toRightOf="@id/tv_first_name"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_last_name"
        android:text="@string/save"
        android:gravity="center"
        android:layout_toLeftOf="@+id/divider"
        android:textSize="28sp"/>
    <View
        android:id="@id/divider"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#808080"
        android:layout_margin="10dp"
        android:layout_alignTop="@id/btn_save"
        android:layout_alignBottom="@id/btn_save"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_load"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_last_name"
        android:text="@string/load"
        android:gravity="center"
        android:layout_toRightOf="@id/divider"
        android:textSize="28sp"/>

</RelativeLayout>
